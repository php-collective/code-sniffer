<?xml version="1.0"?>
<ruleset name="code-sniffer">
    <config name="installed_paths" value="../../php-collective/code-sniffer"/>
    <config name="php_version" value="80100"/>

    <arg name="tab-width" value="4"/>
    <arg value="nps"/>

    <file>PhpCollective/</file>
    <file>PhpCollectiveStrict/</file>
    <file>tests/PhpCollective/</file>
    <file>tests/TestCase.php</file>
    <file>docs/</file>
    <file>bin/</file>

    <rule ref="PhpCollectiveStrict"/>

    <exclude-pattern>/PhpCollective/tests/files/</exclude-pattern>

</ruleset>
